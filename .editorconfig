root = true

# All files
[*]
indent_style = tab
indent_size = 4

# Set the end of line to CR/LF
end_of_line = crlf

# Set the charset to UTF-8
charset = utf-8

# Trim trailing whitespace
trim_trailing_whitespace = true

# Insert final newline
insert_final_newline = true

# JavaScript files
[*.js]
indent_style = tab
indent_size = 4

# TypeScript files
[*.ts]
indent_style = tab
indent_size = 4

# JSON files
[*.json]
indent_style = tab
indent_size = 4

# HTML files
[*.html]
indent_style = tab
indent_size = 4

# CSS files
[*.css]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
indent_style = tab
indent_size = 4


# Xml files
[*.xml]
indent_style = tab
indent_size = 4
